{%- capture banner_title_color -%}
  {%- if block.settings.banner_title_color != blank -%}
    color: {{ block.settings.banner_title_color }}
  {%- else -%}
    color: #fff;
  {%- endif -%}
{%- endcapture -%}
{%- capture banner_sub_title_color -%}
  {%- if block.settings.banner_sub_title_color != blank -%}
    color: {{ block.settings.banner_sub_title_color }}
  {%- else -%}
    color: #fff;
  {%- endif -%}
{%- endcapture -%}
{%- capture banner_sub_title_location -%}
  {%- if block.settings.content_position_pc == 'boxCenter' -%}
    text-align:center
  {%- endif -%}
{%- endcapture -%}

{%- capture banner_desc_color -%}
  {%- if block.settings.banner_desc_color != blank -%}
    color: {{ block.settings.banner_desc_color }}
  {%- else -%}
    color: #fff;
  {%- endif -%}
{%- endcapture -%}

{%- capture banner_more_color -%}
  {%- if block.settings.banner_more_color != blank -%}
    color: {{ block.settings.banner_more_color }}
{%- else -%}
  {%- endif -%}
{%- endcapture -%}

{%- capture banner_title_color_mob -%}
  {%- if block.settings.banner_title_color_mob != blank -%}
    color: {{ block.settings.banner_title_color_mob }}
  {%- else -%}
    color: #fff;
  {%- endif -%}
{%- endcapture -%}
{%- capture banner_sub_title_color_mob -%}
  {%- if block.settings.banner_sub_title_color_mob != blank -%}
    color: {{ block.settings.banner_sub_title_color_mob }}
  {%- else -%}
    color: #fff;
  {%- endif -%}
{%- endcapture -%}
{%- capture banner_desc_color_mob -%}
  {%- if block.settings.banner_desc_color_mob != blank -%}
    color: {{ block.settings.banner_desc_color_mob }}
  {%- else -%}
    color: #fff;
  {%- endif -%}
{%- endcapture -%}
{%- capture banner_more_color_mob -%}
  {%- if block.settings.banner_more_color_mob != blank -%}
    color: {{ block.settings.banner_more_color_mob }}
{%- else -%}
  {%- endif -%}
{%- endcapture -%}

{%- if type == 'video' -%}
  {%- if block.settings.banner_sub_title != blank or block.settings.banner_sub_title_mob != blank -%}
    <div
      class="hidden text-20 font-semibold text-white fb-sm:block"
      style="{{ banner_sub_title_color }}; {{banner_sub_title_location}}"
    >
      {{ block.settings.banner_sub_title }}
    </div>
    <div class="text-16 font-semibold fb-sm:hidden" style="{{ banner_sub_title_color_mob }}">
      {{ block.settings.banner_sub_title_mob }}
    </div>
  {%- endif -%}
  {%- assign title_oprichtext = block.settings.banner_title | strip_html -%}
  {%- assign title_oprichmobtext = block.settings.banner_title_mob | strip_html -%}
  {%- if title_oprichtext != blank or title_oprichmobtext != blank -%}
    <div
      class="SectionHeader__Heading SectionHeader__Heading--emphasize Heading u-h1 content_position_pc"
      style="{{ banner_title_color }} ; {{banner_sub_title_location}}"
    >
      {{ block.settings.banner_title }}
    </div>
    <div
      class="SectionHeader__Heading SectionHeader__Heading--emphasize Heading u-h1 content_position_mobile"
      style="{{ banner_title_color_mob }}"
    >
      {{ block.settings.banner_title_mob }}
    </div>
  {%- endif -%}
{%- else -%}
  {%- if block.settings.banner_sub_title != blank or block.settings.banner_sub_title_mob != blank -%}
    <div
      class=" hidden text-20 font-semibold text-white fb-sm:block"
      style="{{ banner_sub_title_color }} ;{{banner_sub_title_location}}"
    >
      {{ block.settings.banner_sub_title }}
    </div>
    <div class="text-14 font-semibold text-white fb-sm:hidden" style="{{ banner_sub_title_color_mob }}">
      {{ block.settings.banner_sub_title_mob }}
    </div>
  {%- endif -%}
  {%- if block.settings.banner_title != blank or block.settings.banner_title_mob != blank -%}
    <div
      class=" mx-auto mt-3 hidden max-w-2xl text-40 font-bold fb-sm:block"
      style="{{ banner_title_color }}; {{banner_sub_title_location}}"
    >
      {{ block.settings.banner_title }}
    </div>
    <div class="mx-auto mt-2 max-w-xs text-24 font-bold fb-sm:hidden" style="{{ banner_title_color_mob }}">
      {{ block.settings.banner_title_mob }}
    </div>
  {%- endif -%}
  {%- if block.settings.banner_desc != blank or block.settings.banner_desc_mob != blank -%}
    <div
      class="mx-auto mt-3 hidden max-w-2xl text-16 fb-sm:block"
      style="{{ banner_desc_color }}; {{banner_sub_title_location}}"
    >
      {{ block.settings.banner_desc }}
      {%- if block.settings.banner_icon != blank -%}
        {% assign banner_icon = block.settings.banner_icon | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
        <img
          class="ml-3 inline-block h-6 w-auto"
          loading="lazy"
          data-src="{{ banner_icon }}"
          data-optimumx="1.2"
          data-widths="[400, 600, 800, 1000, 1200, 1400, 1600, 1800, 2000, 2200]"
          data-sizes="auto"
          alt="{{ block.settings.banner_icon.alt | escape }}"
        >
      {%- endif -%}
    </div>
    <div class="mt-2 px-8 text-12 font-normal fb-sm:hidden" style="{{ banner_desc_color_mob }}">
      {{ block.settings.banner_desc_mob }}
      {%- if block.settings.banner_icon_mob != blank -%}
        {% assign banner_icon_mob = block.settings.banner_icon_mob | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
        <img
          class="ml-2 inline-block h-4 w-auto"
          data-src="{{ banner_icon_mob}}"
          data-optimumx="1.2"
          data-widths="[400, 600, 800, 1000, 1200, 1400, 1600, 1800, 2000, 2200]"
          data-sizes="auto"
          alt="{{ block.settings.banner_icon_mob.alt | escape }}"
        >
      {%- endif -%}
    </div>
  {%- endif -%}
{%- endif -%}

{%- if block.settings.button_1_text != blank and block.settings.button_2_text != blank -%}
  {%- assign has_two_buttons = true -%}
{%- else -%}
  {%- assign has_two_buttons = false -%}
{%- endif -%}

{%- if block.settings.button_1_text != blank or block.settings.button_2_text != blank -%}
  <div class="mt-10 hidden fb-sm:flex {%  if block.settings.content_position_pc == 'boxCenter' %} items-center justify-center{% endif %}">
    <div class="flex {% if has_two_buttons %}flex-row gap-4 {% endif %}">
      {%- if block.settings.button_1_text != blank -%}
        <a
          {% if block.settings.button_1_open_dialog %}
            data-type="playvideo"
            href="javascript:void(0)"
            data-videourl="{{ block.settings.button_1_link }}"
            class="js-open-videodialog js-public-gtm-btn block rounded-lg px-12 py-3 text-16 font-bold"
          {% else %}
            href="{{ block.settings.button_1_link }}"
            class="js-public-gtm-btn block rounded-lg px-12 py-3 text-16 font-bold"
          {% endif %}
          style="{% if block.settings.button_1_text_bordercolor %}border-color:{{ block.settings.button_1_text_bordercolor }};{% endif %}{% if block.settings.button_1_text_color %}color: {{ block.settings.button_1_text_color }}; {% endif %}{% if block.settings.button_1_text_backgroundcolor %}background-color: {{ block.settings.button_1_text_backgroundcolor }};{% endif %}"
          data-number="{{ forloop.index }}"
          data-btntext="{{ block.settings.button_1_text }}"
          id="gtm-homeSlideshow-xBikeButton-{{ block.settings.button_1_text | escape }}"
        >
          {{ block.settings.button_1_text | escape }}
        </a>
      {%- endif -%}

      {%- if block.settings.button_2_text != blank -%}
        <a
          {% if block.settings.button_2_open_dialog %}
            data-type="playvideo"
            href="javascript:void(0)"
            data-videourl="{{ block.settings.button_2_link }}"
            class="js-open-videodialog js-public-gtm-btn block  rounded-lg px-12 py-3 text-16 font-bold"
          {%- else -%}
            href="{{ block.settings.button_2_link }}"
            class="js-public-gtm-btn block rounded-lg px-12 py-3 text-16 font-bold"
          {% endif %}
          style="{% if block.settings.button_2_text_bordercolor %}border-color:{{ block.settings.button_2_text_bordercolor }};{% endif %}{% if block.settings.button_2_text_color %}color: {{ block.settings.button_2_text_color }}; {% endif %}{% if block.settings.button_2_text_backgroundcolor %}background-color: {{ block.settings.button_2_text_backgroundcolor }};{% endif %}"
          data-number="{{ forloop.index }}"
          data-btntext="{{ block.settings.button_2_text }}"
          id="gtm-homeSlideshow-xBikeButton-{{ block.settings.button_2_text | escape }}"
        >
          {{ block.settings.button_2_text | escape }}
        </a>
      {%- endif -%}
    </div>
  </div>
{%- endif -%}

{%- if block.settings.button_1_text_mob != blank and block.settings.button_2_text_mob != blank -%}
  {%- assign has_two_buttons_mob = true -%}
{%- else -%}
  {%- assign has_two_buttons_mob = false -%}
{%- endif -%}

{%- if block.settings.button_1_text_mob != blank or block.settings.button_2_text_mob != blank -%}
  <div class="mt-8 fb-sm:hidden">
    <div class="flex w-auto {%  if block.settings.content_position_mobile == 'topCenter' %} items-center justify-center{% endif %} {% if has_two_buttons_mob %}flex-row gap-4{% endif %}">
      {%- if block.settings.button_1_text_mob != blank -%}
        <a
          {% if block.settings.button_1_open_dialog_mob %}
            data-type="playvideo"
            href="javascript:void(0)"
            data-videourl="{{ block.settings.button_1_link_mob }}"
            class="js-open-videodialog js-public-gtm-btn block rounded-md px-7 py-3 text-12 font-bold"
          {%- else -%}
            href="{{ block.settings.button_1_link_mob }}"
            class="js-public-gtm-btn block rounded-md px-7 py-3 text-12 font-bold"
          {% endif %}
          style="{% if block.settings.button_1_text_bordercolor_mob %}border-color:{{ block.settings.button_1_text_bordercolor_mob }};{% endif %}{% if block.settings.button_1_text_color_mob %}color: {{ block.settings.button_1_text_color_mob }}; {% endif %}{% if block.settings.button_1_text_backgroundcolor_mob %}background-color: {{ block.settings.button_1_text_backgroundcolor_mob }};{% endif %}"
          data-number="{{ forloop.index }}"
          data-btntext="{{ block.settings.button_1_text_mob }}"
          id="gtm-homeSlideshow-xBikeButton-{{ block.settings.button_1_text_mob | escape }}"
        >
          {{ block.settings.button_1_text_mob | escape }}
        </a>
      {%- endif -%}

      {%- if block.settings.button_2_text_mob != blank -%}
        <a
          {% if block.settings.button_2_open_dialog_mob %}
            data-type="playvideo"
            href="javascript:void(0)"
            data-videourl="{{ block.settings.button_2_link_mob }}"
            class="js-open-videodialog js-public-gtm-btn block rounded-md px-7 py-3 text-12 font-bold"
          {%- else -%}
            href="{{ block.settings.button_2_link_mob }}"
            class="js-public-gtm-btn block rounded-md px-7 py-3 text-12 font-bold"
          {% endif %}
          style="{% if block.settings.button_2_text_bordercolor_mob %}border-color:{{ block.settings.button_2_text_bordercolor_mob }};{% endif %}{% if block.settings.button_2_text_color_mob %}color: {{ block.settings.button_2_text_color_mob }}; {% endif %}{% if block.settings.button_2_text_backgroundcolor_mob %}background-color: {{ block.settings.button_2_text_backgroundcolor_mob }};{% endif %}"
          data-number="{{ forloop.index }}"
          data-btntext="{{ block.settings.button_2_text_mob }}"
          id="gtm-homeSlideshow-xBikeButton-{{ block.settings.button_2_text_mob | escape }}"
        >
          {{ block.settings.button_2_text_mob | escape }}
        </a>
      {%- endif -%}
    </div>
  </div>
{%- endif -%}

{%- assign banner_more = block.settings.banner_more | strip_html -%}
{%- assign banner_more_mob = block.settings.banner_more_mob | strip_html -%}
{%- if block.settings.banner_more != blank or block.settings.banner_more_mob != blank -%}
  <div class="mt-3 hidden text-14 fb-sm:block" style="{{ banner_more_color }}; {{banner_sub_title_location}}">
    {{ block.settings.banner_more }}
  </div>
  <div class=" mt-2 text-10 fb-sm:hidden" style="{{ banner_more_color_mob }}">
    {{ block.settings.banner_more_mob }}
  </div>
{%- endif -%}
