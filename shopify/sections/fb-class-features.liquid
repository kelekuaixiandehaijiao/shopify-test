      }
    ],
    "blocks":[
      {
        "type": "features_list",
        "name": "features list",
        "settings":[
          {
            "type": "text",
            "id": "fb_features_type",
            "label": "Features Type"
          }
        ]
      }
    ]
  }
{% endschema %}