<footer
  id="section-{{ section.id }}"
  data-section-id="{{ section.id }}"
  data-section-type="footer"
  class="Footer border-t border-t-e6e6e6 {% if section.blocks.size <= 2 %}Footer--center{% endif %}"
  role="contentinfo"
>
  <div class="w-full py-10 max-w-75r mx-auto">
    {%- if section.blocks.size > 0 -%}
      <div class="Footer__Inner px-5 fb-sm:px-10 fb-md:px-0 fb-sm:flex fb-sm:flex-wrap">
        <div class="newMbFooter fb-sm:hidden">
          {%- for block in section.blocks -%}
            <div class="custom-nav js-footer-nav mb-2 w-full" {{ block.shopify_attributes }}>
              {%- case block.type -%}
                {%- when 'links' -%}
                  {%- assign linklist = linklists[block.settings.menu] -%}

                  {%- if linklist != empty -%}
                    <div class="Footer__Title nav-title flex flex-row justify-between text-12 font-bold text-121212">
                      <a
                        {% if linklist.title == 'FAQs' %}
                          href="/pages/faqs"
                        {% else %}
                          href="javascript:void(0)"
                        {% endif %}
                      >
                        {{- linklist.title | escape -}}
                      </a>
                      {% render 'icon-caret', class: 'w-3 h-3 tw-absolute' %}
                    </div>
                    <ul class="Linklist nav-list mt-3  h-0 overflow-hidden transition-all duration-500">
                      {%- for link in linklist.links -%}
                        <li class="Linklist__Item mb-2 text-12 text-666666">
                          <a href="{{ link.url }}" class="Link Link--primary">{{ link.title | escape }}</a>
                        </li>
                      {%- endfor -%}
                    </ul>
                  {%- endif -%}
              {%- endcase -%}
            </div>
          {%- endfor -%}
        </div>

        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'text' -%}
              <div class="Footer__Block Footer__Block--{{ block.type }} mt-8 fb-sm:basis-1/2 fb-md:basis-3/4" {{ block.shopify_attributes }}>
                {%- if block.settings.title != blank -%}
                  <h3 class="Footer__Title mb-3 text-12 fb-md:text-16 font-bold text-121212">{{ block.settings.title | escape }}</h3>
                {%- endif -%}

                {%- if block.settings.content != blank -%}
                  <div class="Footer__Content footer_contact_css text-12 fb-md:text-14 text-666666">
                    {{ block.settings.content }}
                  </div>
                {%- endif -%}

                {%- if block.settings.show_social_media -%}
                  <div class="w-40">
                    {% render 'social-media',
                      class: 'Footer__Social text-121212 flex justify-center items-center',
                      containerClass: 'w-40 ',
                      spacing: 'loose'
                    %}
                  </div>
                {%- endif -%}
              </div>
            {%- when 'links' -%}
              <div
                class="Footer__Block Footer__Block--{{ block.type }} hidden fb-sm:block fb-sm:basis-1/4 fb-md:basis-0 fb-md:flex-auto"
                {{ block.shopify_attributes }}
              >
                {%- assign linklist = linklists[block.settings.menu] -%}

                {%- if linklist != empty -%}
                  <h3 class="Footer__Title text-121212 font-bold text-16 mb-3 fb-md:mb-4">{{ linklist.title | escape }}</h3>

                  <ul class="Linklist">
                    {%- for link in linklist.links -%}
                      <li class="Linklist__Item mb-2 fb-md:mb-3 text-666666 text-14">
                        {%- if tel != empty -%}
                          <a href="{{ link.url }}" class="Link Link--primary">{{ link.title | escape }}</a>
                        {%- endif -%}
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}
              </div>
            {%- when 'newsletter' -%}
              <div class="Footer__Block Footer__Block--{{ block.type }} mt-3 fb-md:mt-0 fb-sm:basis-1/2 fb-sm:pr-8 fb-md:basis-6/20" {{ block.shopify_attributes }}>
                {%- if block.settings.title != blank -%}
                  <h3 class="Footer__Title mb-3 text-12 fb-md:text-16 font-bold text-121212">{{ block.settings.title | escape }}</h3>
                {%- endif -%}

                {%- if block.settings.content != blank -%}
                  <div class="Footer__Content mb-2 text-12 fb-sm:text-14 text-666666">
                    {{ block.settings.content }}
                  </div>
                {%- endif -%}

                {%- form 'customer', id: 'footer-newsletter', class: 'Footer__Newsletter Form' -%}
                  {%- if form.posted_successfully? -%}
                    <p class="Form__Alert Alert Alert--success text-121212 font-bold text-16">Thanks for signing up!</p>
                  {%- else -%}
                    {%- if form.errors -%}
                      <p class="Form__Alert Alert Alert--error">{{ form.errors.messages.email }}</p>
                    {%- endif -%}
                    {%- if shop.domain contains 'freebeatfit.ca' -%}
                      {%- assign freebeat_tag = 'footer-signup-CA' -%}
                    {%- else -%}
                      {%- assign freebeat_tag = 'footer-signup-US' -%}
                    {%- endif -%}
                    <input type="hidden" name="contact[tags]" value="{{ freebeat_tag }}">
                    <input
                      type="email"
                      name="contact[email]"
                      class="Form__Input h-10 w-full fb-md:h-12 rounded-md border border-999999 px-4 text-12 fb-md:text-14 placeholder:text-center placeholder:text-999999"
                      aria-label="Enter your email address"
                      placeholder="Enter your email address"
                      required
                    >
                    <button
                      type="submit"
                      onclick="uet_report_conversion_subscribe()"
                      class="Form__Submit mt-3 h-10 w-12r fb-md:text-16 fb-md:h-12 fb-md:w-15r rounded-md bg-121212 text-center text-12 font-bold uppercase text-white"
                    >
                      sign up
                    </button>
                  {%- endif -%}
                {%- endform -%}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    {%- endif -%}

    <div class="Footer__Aside max-w-75r mx-auto fb-sm:px-10 fb-md:px-0 mt-8 fb-sm:flex fb-sm:justify-start fb-sm:flex-col fb-sm:items-start fb-sm:relative">
