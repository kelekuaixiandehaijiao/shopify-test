        <img class="mr-2 h-4 w-4" src="https://cdn.shopify.com/s/files/1/0592/3766/2905/files/united-kindom.png?v=1682676177" alt="united kindom flag"> United Kingdom (Â£ GBP)
        {%- endcapture -%}
      {%- capture ca_img -%}
        <img class="mr-2 h-4 w-4" src="https://cdn.shopify.com/s/files/1/0592/3766/2905/files/jianada.png?v=1682676168" alt="canada flag">Canada ($ CAD)
        {%- endcapture -%}
      {%- capture au_img -%}
            <img class="mr-2 h-4 w-4" src="https://cdn.shopify.com/s/files/1/0667/5555/9723/files/australia.png?v=1684217572" alt="Australia flag">Australia ($ AUD)
        {%- endcapture -%}
      {%- capture us_img -%}
            <img class="mr-2 h-4 w-4" src="https://cdn.shopifycdn.net/s/files/1/0667/5555/9723/files/UnitedStates.png?v=1684996832" alt="United States flag">United States ($ USD)
        {%- endcapture -%}
      {%- capture us_img_selected -%}
            <img class="mr-2 h-4 w-4 fb-md:w-6 fb-md:h-6" src="https://cdn.shopifycdn.net/s/files/1/0667/5555/9723/files/UnitedStates.png?v=1684996832" alt="UNITED STATES flag">UNITED STATES ($ USD)
        {%- endcapture -%}
        <div class="Footer__Localization fb-change-location-default flex items-center justify-center">
          <div class="Footer__LocalizationForm w-full">
            <div class="Footer__LocalizationItem w-full">
              <button
                type="button"
                class="SelectButton flex w-full items-center justify-center text-14 text-121212"
                aria-haspopup="true"
                aria-expanded="false"
                aria-controls="footer-currency-popover"
              >
                {{ us_img_selected }}
              </button>
              <div id="footer-currency-popover" class="Popover Popover--small Popover--noWrap" aria-hidden="true">
                <header class="Popover__Header flex w-full items-center justify-between border-b border-b-121212/10 px-5 py-3">
                  <button type="button" class="Popover__Close h-3 w-3" data-action="close-popover">
                    {% render 'icon' with 'close' %}
                  </button>
                  <span class="Popover__Title text-12 font-bold text-121212"> CHANGE YOUR COUNTRY </span>
                  <div></div>
                </header>
                <div class="Popover__Content pb-5">
                  <div class="fccd-header hidden">
                    <span>CHANGE YOUR COUNTRY</span>
                  </div>
                  <div class="Popover__ValueList Popover__ValueList--center px-5" data-scrollable>
                    <a
                      href="https://global.freebeatfit.com/en-au"
                      class="Popover__Value fccd-button mt-3 flex h-12 items-center px-3 text-16 text-121212"
                    >
                      {{ au_img }}
                    </a>
                    <a
                      href="https://global.freebeatfit.com/"
                      class="Popover__Value fccd-button mt-3 flex h-12 items-center px-3 text-16 text-121212"
                    >
                      {{ ca_img }}
                    </a>
                    <a
                      href="https://global.freebeatfit.com/en-uk"
                      class="Popover__Value fccd-button mt-3 flex h-12 items-center px-3 text-16 text-121212"
                    >
                      {{ uk_img }}
                    </a>
                    <a
                      href="javascript:void(0)"
                      class="Popover__Value fccd-button relative mt-3 flex h-12 items-center rounded-md border border-121212 px-3 text-16 text-121212"
                      aria-current="true"
                    >
                      {{ us_img }}
                      <svg
                        class="fccd-btn-check absolute right-0 top-1/2 mr-3 -translate-y-1/2 transform"
                        width="14"
                        height="9"
                        viewBox="0 0 14 9"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                      >
                        <path d="M12.6667 1.00001L5.33333 8.33334L1 4.00001" stroke="#888888" stroke-linecap="round" stroke-linejoin="round"/>
                      </svg>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="Footer__Copyright text-center mt-3 mb-6 fb-sm:mb-0">
          <a href="{{ routes.root_url }}" class="Footer__StoreName text-121212 font-bold text-14 w-full"
            >Â© {{ shop.name -}}
          </a>
        </div>

      {%- if section.settings.show_payment_methods -%}
        {%- capture payment_methods -%}
          {%- for type in shop.enabled_payment_types -%}
            <li class="payment_methods_item w-2r h-5 fb-md:w-auto fb-md:h-6">{{ type | payment_type_svg_tag }}</li>
          {%- endfor -%}
          {%- assign country_code_var = localization.country.iso_code | downcase -%}
          {%- if country_code_var != 'gb' -%}
            <li class="payment_methods_item w-2r h-5">{{ 'klarna' | payment_type_svg_tag }}</li>
          {%- endif -%}
        {%- endcapture -%}

        {%- if payment_methods != blank -%}
          <ul class="Footer__PaymentList fb-sm:absolute fb-sm:bottom-0 fb-md:right-0 fb-sm:right-10 fb-sm:w-56 flex flex-row w-full justify-center items-center gap-4">
            <!--
              <li class="HorizontalList__Item ">
                <img class="klarna-logo" alt="klarna" src="https://cdn.shopifycdn.net/s/files/1/0592/3766/2905/files/klarna.png?v=1631262810" />
              </li>
            -->
            {{ payment_methods }}
          </ul>
        {%- endif -%}
      {%- endif -%}
    </div>
  </div>
</footer>
<style>
  .payment_methods_item svg {
    width: 100%;
    height: 100%;
  }
  

  .Popover[aria-hidden='false'] {
    transform: translateY(0);
    visibility: visible;
  }
  .Popover {
    position: fixed;
    width: 100%;
    bottom: 0;
    left: 0;
    background: #fff;
    z-index: 11;
    box-shadow: 0 -2px 10px #36363633;
    touch-action: manipulation;
    transform: translateY(100%);
    visibility: hidden;
    transition: all 0.4s cubic-bezier(0.645, 0.045, 0.355, 1);
  }
  @media screen and (min-width: 1008px) {
    .Popover {
      border-radius: 12px;
      box-shadow: 0 0 8px #0003;
      transform: none;
      width: auto;
      bottom: auto;
      left: auto;
      opacity: 0;
      transition:
        opacity 0.2s ease-in-out,
        visibility 0.2s ease-in-out;
    }

    .Popover[aria-hidden='false'] {
      opacity: 1;
      transform: none;
    }
    .Popover::before {
      content: '';
      position: absolute;
      right: 40px;
      width: 10px;
      height: 10px;
      border-style: solid;
    }
    .Popover--positionTop::before {
      top: 100%;
      border-width: 10px 10px 0 10px;
      border-color: #fff transparent transparent transparent;
      filter: drop-shadow(0 2px 2px rgba(54, 54, 54, 0.2));
    }
  }
  .footer_contact_css p {
    margin-bottom: 8px;
  }
  .footer_contact_css p a {
    color: #00cc45;
  }
</style>

{%- if settings.footer_background == settings.background -%}
