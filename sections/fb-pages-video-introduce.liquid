            "label": "Background Image"
        },
        {
            "type": "richtext",
            "id": "video_introduce_title",
            "label": "Title"
        },
        {
            "type": "richtext",
            "id": "video_introduce_desc",
            "label": "Desc"
        },
        {
            "type": "url",
            "id": "video_url",
            "label": "Video Url"
        },
        {
