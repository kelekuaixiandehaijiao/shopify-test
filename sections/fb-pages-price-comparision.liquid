            "label": "Price Comparision Background"
        },
        {
            "type": "text",
            "id": "backgroundImage",
            "label": "Background Image"
        },
        {
            "type": "color",
            "id": "text-color",
            "label": "Text Color"
        },
        {
            "type": "richtext",
            "id": "comparision-title",
            "label": "Title"
        },
        {
            "type": "image_picker",
            "id": "comparision-img",
            "label": "Image Pc"
        },
        {
            "type": "image_picker",
            "id": "comparision-img-mb",
            "label": "Image Mb"
        },
        {
            "type": "color_background",
            "id": "buttonBackground",
