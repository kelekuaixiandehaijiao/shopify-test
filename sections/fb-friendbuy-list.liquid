<style>
    @media only screen and (min-width: 1920px){
        .fri-buy-list-con{
            width: 1520px;
        }
    }
    /* pc端 */
    @media only screen and (min-width: 821px){
        .buy_list_img_mobile{
            display: none;
        }
        .buy_list_img_pc{
            display: none;
        }
        .fri-buy-list-con{
            width: 80%;
            margin: auto;
            overflow: hidden;
            padding-top: 120px;
        }
        .buy-list-con{
            margin-top: -40px;
            margin-bottom:120px;
        }
        .buy_list_text{
            position: relative;
            height: 30px;
            margin: 20px 0;
            border-top: 1px solid rgba(0,0,0,0.15);
        }
        .buy-list-item1:first-of-type .buy_list_text{
            border-top: none;
        }
        .buy_list_title{
            width: 564px;
            font-weight: 600;
            font-size: 20px;
            line-height: 70px;
            color: #000000;
        }
        .fb-tw-absolute{
            width: 28px;
            height: 28px;
            position: absolute;
            margin-top: 8px;
            right: 0;
            top:50%;
            --tw-rotate: 0;
            transition: .3s;
            --tw-translate-x: 0;
            --tw-translate-y: 0;
            --tw-skew-x: 0;
            --tw-skew-y: 0;
            --tw-scale-x: 1;
            --tw-scale-y: 1;
            transform: translateX(var(--tw-translate-x)) translateY(var(--tw-translate-y)) rotate(var(--tw-rotate)) skewX(var(--tw-skew-x)) skewY(var(--tw-skew-y)) scaleX(var(--tw-scale-x)) scaleY(var(--tw-scale-y));
        }
        .icon_turn {
            transform: rotate(180deg);
          }	
        .buy_list_desc{
            transition: height .5s;
            height:0px;
            overflow: hidden;
        }
        .buy_list_desc li{
            margin-right: 60px;
            font-weight: 500;
            font-size: 16px;
            margin-top:10px;
            line-height: 26px;
            color: #747474;
        }     
    }
    /* mobile端 */
    @media only screen and (max-width: 820px){
        .buy_list_img_pc{
            display: none;
        }
        .fri-buy-list{
            width: 375px;
            margin: auto;
        }
        .fri-buy-list-con{
            width: 325px;
            margin: auto;
            overflow: hidden;
            padding-top: 40px;
        }
        .buy_list_img_mobile{
            width: 100%;
            border-radius: 12px;
        }
        .buy-list-con{
            width: 325px;
            margin-top: 24px;
            margin-bottom:60px;
        }
        .buy_list_text{
            position: relative;
        }
        .buy_list_title{
            font-weight: 600;
            font-size: 14px;
            line-height: 20px;
            color: #000000;
            margin-top: 20px;
        }
        .fb-tw-absolute{
            width: 16px;
            height: 16px;
            position: absolute;
            margin-top: -8px;
            right: 0;
            top:50%;
            --tw-rotate: 0;
            transition: .3s;
            --tw-translate-x: 0;
            --tw-translate-y: 0;
            --tw-skew-x: 0;
            --tw-skew-y: 0;
            --tw-scale-x: 1;
            --tw-scale-y: 1;
            transform: translateX(var(--tw-translate-x)) translateY(var(--tw-translate-y)) rotate(var(--tw-rotate)) skewX(var(--tw-skew-x)) skewY(var(--tw-skew-y)) scaleX(var(--tw-scale-x)) scaleY(var(--tw-scale-y));
        }
        .icon_turn {
            transform: rotate(180deg);
          }	
        .buy_list_desc{
            transition: height .5s;
            height:0;
            overflow: hidden;
        }
        .buy_list_desc li{
            font-weight: 500;
            font-size: 14px;
            line-height: 20px;
            margin-top:4px;
            color: #747474;
        }
    }
</style>

