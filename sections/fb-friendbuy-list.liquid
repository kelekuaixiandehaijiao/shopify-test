<div id="section-{{ section.id }}" class="fri-buy-list">
    <div class="fri-buy-list-con">
        {% assign buy_list_img_pc = section.settings.buy_list_img_pc | img_url: '1x1' | replace: '_1x1.','_{width}x.' %}
