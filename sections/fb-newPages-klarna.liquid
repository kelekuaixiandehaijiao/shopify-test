<div class="fb-newPage-kalrna" id="section-{{ section.id }}">
    <div class="fb_np_klarna_con fb_np_home_con fb_np_klarna_con">
        <div class="fb-newPage-kalrna-wrapper">
        {%- assign klarna_title_block_oprichtext = section.settings.klarna_title_block-%}
        {%- if klarna_title_block_oprichtext != blank -%}
            <div class="fb_np_home_title">
                {{ section.settings.klarna_title_block }}
            </div> 
            <div class="fb_np_home_title_mb">
                {{ section.settings.klarna_title_block_mb }}
            </div>
        {%- endif -%}
        <div class="fb_np_klarna_con_logo">
            <img src="https://cdn.shopify.com/s/files/1/0592/3766/2905/files/klarna_43703326-8a1b-4aa7-8f01-857cad211d25_1200x.png?v=1654079183" alt="">
        </div>
        </div>
        <div class="fb_np_klarna_con_price">
            <div class="fb_np_klarna_con_price_item">
              
                <div class="fb_np_klarna_price_item">
                  {%- if section.settings.klarna_first_unit != blank -%}
                    <div class="fb_np_klarna_unit fb_np_home_color">
                      {{ section.settings.klarna_first_unit }}
                    </div>
                  {%- endif -%}
                  {%- if section.settings.klarna_first_number != blank -%}
                    <div class="fb_np_number fb_np_home_color">
                      {{ section.settings.klarna_first_number }}
                    </div>
                  {%- endif -%}
                </div>
                {%- if section.settings.klarna_first_desc != blank -%}
                  <div class="fb_np_klarna_price_item_text fb_np_home_color">
                    {{ section.settings.klarna_first_desc }}
                  </div>
                {%- endif -%}
            </div>
            <div class="fb_np_klarna_price_item_img">
              {%- if section.settings.klarna_line != blank -%}
                <img src="{{  section.settings.klarna_line | img_url: '' }}" />
              {%- else -%}
                <img src="https://cdn.shopify.com/s/files/1/0592/3766/2905/files/4_2x_76673320-83d2-4754-97e2-f7fa2699686a.png?v=1659438224" alt="">
              {%- endif -%} 
            </div>
            <div class="fb_np_klarna_con_price_item">
                {%- if section.settings.klarna_sencond_top_desc != blank -%}
                  <div class="fb_np_klarna_as_low_as">
                    {{ section.settings.klarna_sencond_top_desc }}
                  </div>
                {%- endif -%}
                <div class="fb_np_klarna_price_item">
                  {%- if section.settings.klarna_sencond_unit != blank -%}
                    <div class="fb_np_klarna_unit fb_np_home_color">
                      {{ section.settings.klarna_sencond_unit }}
                    </div>
                  {%- endif -%}
                  {%- if section.settings.klarna_sencond_number != blank -%}
                    <div class="fb_np_number fb_np_home_color">
                      {% comment %} {{ section.settings.klarna_sencond_number }} {% endcomment %}
                       {%- assign product =  section.settings.product  -%}
                        {% if product != blank %}
                           {{ product.selected_or_first_available_variant.price | plus: settings.fb_lit_bike_shipping_rate | divided_by: 3600.0 | round: 2 }}
                        {%- else -%}
                          {{ section.settings.klarna_sencond_number }}
                       {% endif %}
                     
                    </div>
                  {%- endif -%}
                </div>
                {%- if section.settings.klarna_sencond_desc != blank -%}
                  <div class="fb_np_klarna_price_item_text fb_np_home_color">
                    {{ section.settings.klarna_sencond_desc }}<sup>1</sup>
                  </div>
                {%- endif -%}  
               
            </div>
            <div class="fb_np_klarna_price_item_img">
              {%- if section.settings.klarna_line != blank -%}
                <img src="{{  section.settings.klarna_line | img_url: '' }}" />
              {%- else -%}
                <img src="https://cdn.shopify.com/s/files/1/0592/3766/2905/files/4_2x_76673320-83d2-4754-97e2-f7fa2699686a.png?v=1659438224" alt="">
              {%- endif -%} 
            </div>
            <div class="fb_np_klarna_con_price_item fb_np_klarna_con_price_item_m">
                <div class="fb_np_klarna_price_item">
                  {%- if section.settings.klarna_third_number != blank -%}
                    <div class="fb_np_number fb_np_home_color">
                      {{ section.settings.klarna_third_number }}
                    </div>
                  {%- endif -%}
                  {%- if section.settings.klarna_third_unit != blank -%}
                    <div class="fb_np_klarna_unit fb_np_home_color">
                      {{ section.settings.klarna_third_unit }}
                    </div>
                  {%- endif -%}
                </div>
                {%- if section.settings.klarna_third_desc != blank -%}
                 <div class="fb_np_klarna_price_item_text fb_np_home_color">
                    {{ section.settings.klarna_third_desc  }}
                </div>
                {%- endif -%}
            </div>
        </div>
        <a href="{{section.settings.klarna_btn_link}}" target="_blank"><div class="fb_np_button">{{section.settings.klarna_btn_text}}</div></a>
    </div>
  </div>
  <style>
    #section-{{ section.id }} {
      background-color: {{ section.settings.klarna_color }}
    }
    .fb_np_home_title,.fb_np_home_title_mb {
      color: {{ section.settings.klarna_text_color }};
    }
    .fb_np_klarna_as_low_as{
      color:{{ section.settings.klarna_text_color }};
    }
    .fb_np_button{
      color: {{ section.settings.btnTextColor}};
      background: {{ section.settings.btnColor}};
    }    
    #section-{{ section.id }} .fb_np_home_color{
      color: {{ section.settings.klarna_text_color }}
    }
    @media only screen and (max-width: 768px){
        #section-{{ section.id }} .fb-newPage-kalrna{
          background-color: {{ section.settings.klarna_mobile_color }}
        }
     }
    .fb-newPage-kalrna-wrapper{
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 54px;
    }
    .fb_np_home_title {
        font-size: 36px;
        font-weight: bold;
        text-align: center;
        width: 100%;
    }
    .fb_np_home_title_mb{
      display: none;
    }
    .fb_np_klarna_con_logo{
      width:98px;
      height: auto;
    }
    .fb_np_klarna_as_low_as { 
        font-size: 16px;
        line-height: 16px;
        font-weight: 500;
        width:90px;
        text-align: center; 
        position: absolute;
        top: -30px;
    }
    .fb_np_home_con{
        background: transparent;
    }
    .fb_np_klarna_con{
        padding: 80px 30px 0;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .fb_np_button{
      width:280px;
      height: 50px;
      line-height: 50px;
      text-align: center;
      margin: 59px auto 40px;
      font-size: 16px;
      font-family: Montserrat-SemiBold, Montserrat;
      font-weight: 600;
    }
    .fb_np_klarna_con_price{
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .fb_np_klarna_con_price_item{
      position: relative;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      align-items: center;
    }

    .fb_np_klarna_price_item{
      display: flex;
      align-items: flex-start;
    }
    .fb_np_klarna_unit{
      font-size: 16px;
      line-height: 16px;
      font-weight: 400;
      margin-top: 10px;
    }
    .fb_np_number{
      font-size: 88px;
      line-height: 88px;
      font-weight: 400;
    }
    .fb_np_klarna_price_item_text{
      font-size: 12px;
      font-weight: 300;
      color: #000000;
      line-height: 12px;
      opacity: .6;
    }
    .fb_np_klarna_price_item_img{
      width:20px;
      margin: 0px 89px;
    }
    .fb_np_klarna_price_item_img img{
      width: 1px;
      height: 40px;
    }
    .fb_np_klarna_price_item{
      font-size: 75px;
      line-height: 92px;
    }
    .fb_np_klarna_con_text{
      margin: 51px 0 35px;
      font-size: 25px;
      line-height: 30px;
    }
  @media only screen and (min-width: 769px) and (max-width: 1024px){
    .fb_np_klarna_con{
      padding: 30px 20px 0;
    }
    .fb-newPage-kalrna-wrapper{
        margin-bottom: 34px;
    }
    .fb_np_klarna_con_log{
      margin-bottom: 34px;
    }
    .fb_np_klarna_as_low_as{
      top: -25px;
    }
    .fb_np_klarna_price_item{
      height: 49px;
    }
    .fb_np_home_title{
      font-size: 24px;
    }
    .fb_np_number{
      font-size: 33px;
      line-height: 38px;
    }
    .fb_np_klarna_unit{
      margin-top: 6px;
    }
    .fb_np_klarna_price_item_img{
      width: 11px;
      margin: 0 39px;
    }
    .fb_np_klarna_price_item_img img{
      width: 1px;
      height: 49px;
    }
    .fb_np_button{
      width:130px;
      height: 30px;
      margin: 24px auto 16px;
      font-size:12px;
      line-height:30px;
    }
  }
  @media only screen and (max-width: 768px){
    .fb_np_klarna_con{
      padding: 30px 0px 0;
    }
    
    .fb-newPage-kalrna-wrapper{
        margin-bottom: 0;
    }
    .fb_np_home_title{
      display: none;
    }
    .fb_np_home_title_mb{
      font-size: 24px;
      line-height: 10px;
      font-weight: 400;
      display: block;
      margin-bottom: 60px;
      text-align: center;
    }
    .fb_np_klarna_con_logo{
      display: none;
    }
    .fb_np_number{
      font-size: 41px;
      line-height: 49px;
    }
    .fb_np_klarna_unit{
      margin-top: 9px;
    }
    .fb_np_klarna_as_low_as{
      font-size: 16px;
      line-height: 16px;
    }
    .fb_np_klarna_price_item_text{
      font-size: 12px;
      font-weight: 300;
      line-height: 12px;
      /* margin-top: 6px; */
    }
    .fb_np_klarna_price_item_img{
      width: 1px;
      margin: 0px 15px;
    }
    .fb_np_klarna_price_item_img img{
      width: 1px;
      height: 40px;
    }
    .fb_np_button{
      width:245px;
      margin: 39px auto 40px;
    }
  }
  </style>
