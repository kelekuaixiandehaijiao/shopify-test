    "name": "FbClassesReady",
    "presets": [
      {
        "name": "fb-classes-ready",
        "category": "Fb Sections",
        "blocks": []
      }
    ],
    "settings": [
      {
        "type": "url",
        "id": "fb_video_url",
        "label": "Video Url"
      },
      {
        "type": "url",
        "id": "fb_video_url_mob",
        "label": "Video Url Mob"
      },
      {
        "type": "richtext",
        "id": "fb_ready_title",
        "label": "Ready title"
      }, 
      {
        "type": "richtext",
        "id": "fb_ready_desc",
        "label": "Ready desc"
      },
      {
        "type":"url",
        "id":"fb_ready_link",
        "label":"Link"
      }
    ]
  }
{% endschema %}