<div class="fb-host-application" id="section-{{ section.id }}">
  <div class="js-become-host-one">
    <div class="fha-flex-box">
      <div class="fha-left-box">
        <div class="fha-left-title">
          {{ section.settings.showroom_title }}
        </div>
        <div class="fha-left-sub">
          {{ section.settings.showroom_title_sub }}
        </div>
        <ul class="fha-left-ul">
          {%- for block in section.blocks -%}
            <li>
              <div class="fha-circle">
                <span></span>
              </div>
              <div class="fha-ul-li-text">
                {{ block.settings.fha_list_li }}
              </div>
            </li>
          {%- endfor -%}
        </ul>
      </div>
      <div class="fha-right-box">
        <div class="fha-right-box-title">
          Start your application
        </div>
        <form class="needs-validation fb-host-form">
          <div class="fb-md-3">
            <label for="firstName" class="form-label fb-form-label">First Name *</label>
            <input type="text" class="form-control" id="first_name" maxlength="64" required>
            <div class="fb-invalid-feedback"></div>
          </div>
          <div class="fb-md-3">
            <label for="lastName" class="form-label fb-form-label">Last Name *</label>
            <input type="text" class="form-control" id="last_name" maxlength="64" required>
            <div class="fb-invalid-feedback"></div>
          </div>
          <div class="fb-md-3">
            <label for="email" class="form-label fb-form-label">Email *</label>
            <input type="text" class="form-control" id="email" required>
            <div class="fb-invalid-feedback">
              {% comment %}

                
              {% endcomment %}
              Please enter a valid email address
            </div>
          </div>
          <div class="fb-md-3">
            <label for="phone_number" class="form-label fb-form-label">Phone Number *</label>
            <input type="text" class="form-control" id="phone_number" maxlength="20" required>
            <div class="fb-invalid-feedback">

              {% comment %}
                Please enter a valid ten digit U.S. phone number.
              {% endcomment %}
            </div>
          </div>
          <div class="fb-md-btn">
            <button class="btn-continue-next fb-btn-primary js-host-continue" disabled>
              SUBMIT & CONTINUE
              <i></i>
            </button>
          </div>
        </form>
        <div class="fb-host-desc">
          {{ section.settings.showroom_input_desc }}
        </div>

      </div>
    </div>
  </div>
