        </div>

        <div class="fb-md-btn flex-center">
          <button class="btn-continue-next fb-btn-primary js-host-submit" disabled>
            SUBMIT APPLICATION
            <i></i>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "FbHostApplication",
    "presets": [
      {
        "name": "fb-host-application",
        "category": "Fb Sections"
      }
    ],
    "settings": [
      {
        "type": "richtext",
        "id": "showroom_title",
        "label": "title",
        "default": "<p>The Next </p><p>Showroom</p> <p> Host</p>"
