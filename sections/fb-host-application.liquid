      },
      {
        "type": "richtext",
        "id": "showroom_input_desc",
        "label": "sub desc"
      },
      {
        "type": "richtext",
        "id": "next_showroom_title",
        "label": "next title",
        "default": "<p>Complete your application</p>"
      }, {
        "type": "richtext",
        "id": "next_showroom_subtitle",
        "label": "next sub title",
        "default": "<p>New freebeat customers will receive 10% cashback after getting accepted as a Showroom Host. Future freebeat riders are eager to visit your Showroom!</p>"
      }
    ],
    "blocks": [
      {
        "type": "list-li",
        "name": "list-li",
        "settings": [
          {
            "type": "richtext",
            "id": "fha_list_li",
            "label": "text"
          }
        ]
      }
    ]
  }
{% endschema %}