<div id="section-{{ section.id }}" class="fb-product-card js-prodcutpage-overview hidden fb-sm:block bg-f5f5f5" data-type="productSwiperCard">
  <div class=" text-121212 text-32 font-bold uppercase text-center w-full pt-10 pb-10 fb-md:pt-15">
    {{ section.settings.fpc_big_title }}
  </div>
  <div class="flex flex-col justify-start items-center fb-sm:px-10">
    {%- for block in section.blocks -%}
      <div class="flex justify-between items-center relative w-full fb-sm:max-w-60r fb-md:max-w-62r h-41r gap-10 mb-10{% if block.settings.selector_order == '2'%} flex-row-reverse {% endif %} {% if block.settings.selector_order == '3'%} bg-white rounded-2xl {% endif %}">
        <div class="fpc-li-video fb-md:max-w-40r h-full rounded-2xl fb-md:basis-2/3 relative {% if block.settings.selector_order == '3'%} flex fb-sm:justify-start fb-md:justify-center items-center ml-5r py-5r{% else %} bg-d1d1d1{% endif %}">
          <video
            class="Image--lazyLoad js-videoAutoPlayer rounded-2xl h-full w-full object-cover fb-md:max-w-40r {% if block.settings.selector_order == '3'%}-rotate-90 fb-sm:max-h-25r fb-md:max-h-25r !w-auto justify-start rounded-none {% endif %}"
            x-webkit-airplay="allow"
            webkit-playsinline="true"
            playsinline="true"
            autoplay="autoplay"
            muted="muted"
            loop="loop"
            data-src="{{ block.settings.fpc_video_pc }}"
          ></video>
        </div>
        <div class="fpc-li-text bg-white rounded-2xl flex flex-col justify-center px-6 h-full fb-sm:pr-5r fb-sm:max-w-xs fb-md:max-w-20r fb-md:basis-1/3">
          <div class="text-121212 text-32 font-bold uppercase mb-6">
            {{ block.settings.fpc_video_title }}
          </div>
          <div class=" text-121212 text-16">
            {{ block.settings.fpc_video_desc }}
          </div>
        </div>
      </div>
    {%- endfor -%}
  </div>
</div>
{% schema %}
{
  "name": "FbProductCard",
  "presets": [
    {
      "name": "fb-product-card",
      "category": "Fb Sections"
    }
  ],
  "settings": [
    {
      "type": "richtext",
      "id": "fpc_big_title",
      "label": "Card Big title"
    }
  ],
  "blocks": [
    {
      "type": "video_and_text",
      "name": "video and text",
      "settings": [
        {
          "type": "select",
          "id": "selector_order",
          "label": "Selector Order",
          "options": [
            {
              "value": "1",
              "label": "left video and right text"
            },
            {
              "value": "2",
              "label": "right video and pc text"
            },
            {
              "value": "3",
              "label": "Personal Trainer"
            }
          ],
          "default": "1"
        },
        {
          "type": "url",
          "id": "fpc_video_pc",
          "label": "Pc Video Url"
        },
        {
          "type": "url",
          "id": "fpc_video_mob",
          "label": "Mob Video Url"
        },
        {
          "type": "color",
          "id": "fpc_video_title_color",
          "label": "MOB Title color",
          "default": "#fff"
        },
        {
          "type": "richtext",
          "id": "fpc_video_title",
          "label": "Title"
        },
        {
          "type": "color",
          "id": "fpc_video_desc_color",
          "label": "MOB desc color",
          "default": "#fff"
        },
        {
          "type": "richtext",
          "id": "fpc_video_desc",
          "label": "Desc"
        }
      ]
    }
  ]
}
{% endschema %}
<style>
  .fb-product-card {
    width: 100%;
    background-color: #efefef;
  }
</style>
