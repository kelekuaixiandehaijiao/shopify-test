{%- assign newPerformance = section.blocks | where: 'type', 'newSwiperContent' | first -%}
{%- assign country_code_var = localization.country.iso_code | downcase -%}
<div class="fb-mobile-device fb-new-performance" id="section-{{ section.id }}">
  <div class="purchase-title">{{ section.settings.content_title }}</div>
  <div class="swiper new-performance-mySwiper">
    <div class="swiper-wrapper">
      {% for item in section.blocks %}
            {% if country_code_var == 'gb' and  item.settings.swiperTitle contains 'Financing' %}
            {% elsif country_code_var == 'au' and  item.settings.swiperTitle contains 'Financing' %}
            {%- else -%}
                <div class="swiper-slide">
                    <div class="new-performance-box">
                        <div class="new-performance-top-list">
                        {% assign imgPiker = item.settings.icon_img_choose | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
                        <img
                            class="Image--lazyLoad Image--fadeIn new-performance-icon"
                            data-src="{{ imgPiker  }}"
                            data-sizes="auto"
                            alt="{{ item.settings.icon_img_choose | escape }}"
                        >
                        <div class="new-performance-title">{{ item.settings.swiperTitle }}</div>
                        </div>
                        <div class="new-performance-des">{{ item.settings.swiperDes }}</div>
                        <!--
                        <a class="new-performance-href" href="{{item.settings.swiper_url}}" target="_blank">{{item.settings.linkDes}}<span>></span>
                        </a>
                        -->
                        <a
                        class="new-performance-href"
                        {% if forloop.last %}
                            href="javascript:void(0);" onclick="TidioShowFun()"
                        {% else %}
                            href="{{item.settings.swiper_url}}"
                        {% endif %}
                        >
                        {{ item.settings.linkDes }}
                        <span>></span>
                        </a>
                    </div>
                </div>
            {%- endif -%}
      {% endfor %}
    </div>
    <div class="swiper-scrollbar"></div>
  </div>
</div>
<div class="fb-new-performance-pc fb-pc-device" id="section-{{ section.id }}">
  {%- if section.settings.content_title != blank -%}
    <div class="purchase-title">
      {{ section.settings.content_title }}
    </div>
  {%- endif -%}
  <div class="fb_safe_footerIcon">
    {%- for block in section.blocks -%}
        {% if country_code_var == 'gb' and  block.settings.swiperTitle contains 'Financing' %}
        {% elsif country_code_var == 'au' and  block.settings.swiperTitle contains 'Financing' %}
        {%- else -%}
            <div class="footerIcon_safe_item">
                <div>
                {% assign imgPiker = block.settings.icon_img_choose | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
                <img
                    class="Image--lazyLoad Image--fadeIn footerIcon_safe_item_icon"
                    data-src="{{ imgPiker }}"
                    data-sizes="auto"
                    alt="{{ block.settings.icon_img_choose.alt | escape }}"
                >
                </div>
                <div class="fb-perfomance-title" style="color: {{ block.settings.hands_top_onecolor }};">
                {{ block.settings.swiperTitle }}
                </div>
                <div class="fb-perfomance-text" style="color: rgba(29, 29, 31, 0.8)">
                <!-- Enjoy warranty up to 10 years for bike components and parts. -->
                {{ block.settings.swiperDes }}
                </div>
                <div class="fb-perfomance-link" style="color: {{ block.settings.hands_learn_more_color }};">
                <!-- <a href="{{ block.settings.swiper_url }}"> -->
                <a
                    {% if forloop.last %}
                    href="javascript:void(0);" onclick="TidioShowFun()"
                    {% else %}
                    href="{{ block.settings.swiper_url }}"
                    {% endif %}
                >
                    {{ block.settings.linkDes }}
                </a>
                <span style="margin:2px 0 0 4px;">></span>
                </div>
            </div>
        {%- endif -%}
    {%- endfor -%}
  </div>
</div>

