{% schema %}
{
  "name": "FbNewPerformance",
  "presets": [
    {
      "name": "fb-new-performance",
      "category": "Fb Sections",
      "blocks": []
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "content_title",
      "label": "Content Title",
      "default": "Purchase Today, Worry-Free"
    }
  ],
  "blocks": [
    {
      "type": "newPerformance",
      "name": "New Performance",
      "settings": [
        {
          "type": "url",
          "id": "swiper_url",
          "label": "Swiper URL"
        },
        {
          "type": "text",
          "id": "swiperTitle",
          "label": "Swiper Title"
        },
        {
          "type": "text",
          "id": "swiperDes",
          "label": "Swiper Description"
        },
        {
          "type": "text",
          "id": "linkDes",
          "label": "Link Des"
        },
        {
          "type": "url",
          "id": "img_url",
          "label": "Img URL"
        },
        {
          "type": "image_picker",
          "id": "icon_img_choose",
          "label": "Choose Icon Image"
        },
        {
          "type": "color",
          "id": "hands_top_onecolor",
          "label": "one text color",
          "default": "#fff"
        },
        {
          "type": "color",
          "id": "hands_top_twocolor",
          "label": "one two color",
          "default": "rgba(29, 29, 31, 0.8)"
        },
        {
          "type": "color",
          "id": "hands_learn_more_color",
          "label": "learn more color",
          "default": "#fff"
        }
      ]
    }
  ]
}
{% endschema %}
