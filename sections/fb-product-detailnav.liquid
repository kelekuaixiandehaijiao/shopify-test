<div class="fb-product-detailnav js-fb-prodcut-detailnav" id="section-{{ section.id }}">
    <ul class="flex-center-between">
        {%- for block in section.blocks -%}
            <li class="{% if forloop.index == 1 %}active{% endif %} js-product-nav" data-index="{{ forloop.index }}">
               <span> {{ block.settings.product_bav_text }} </span> 
            </li>
        {%- endfor -%}
    </ul> 
</div>
{% schema %}
  {
    "name": "FbProductDetailNav",
    "presets": [
      {
        "name": "fb-product-detailnav",
        "category": "Fb Sections",
        "blocks": []
      }
    ],
    "settings": [
        {
            "type": "color",
            "id": "single_back",
            "label": "background color",
            "default": "#fff"
        }
    ],
    "blocks": [
        {
          "type": "name",
          "name": "middle-nav",
          "settings": [
                {
                    "type": "text",
                    "id": "product_bav_text",
                    "label": "Text"
                }
            ]
        }
    ]
  }
{% endschema %}
<style>
    #shopify-section-{{ section.id }} {
        display: none;
    }
    #section-{{ section.id }} {
        background-color: {{ section.settings.single_back }};  
    }
    @media only screen and (max-width: 768px){ 
         #shopify-section-{{ section.id }} {
            display: block;
            position: sticky;
            position: -webkit-sticky;
            top: 63px;
            z-index: 1; 
        }   
        #stamped-main-widget,.fb-specifical{
            display: none;
        }
    }
</style>

