<div class="AI_chip" id="fb-ai-chip">
    <div id="fb-ai-chip-space"></div>
    <div class="cover-img" id="fb-cover-img">
        <div class="text_video_wrapper">
            <div class="fb-AI-description" id="section-{{ section.id }}">
                <div id="AI-text">
                    <div class="AI-title">{{section.settings.title}}</div>
                    <div class="AI-des">{{section.settings.des}}</div>
                </div>
            </div>
            <div class="videoContainer" id="videoContainer">
                <video class="AIvideo Image--lazyLoad" id="AIvideo"
                     data-src="https://cdn.shopify.com/videos/c/o/v/c4eefc0c755c4647927ba6edfdf774e6.mp4" x-webkit-airplay="allow"
                    webkit-playsinline="true" playsinline="true" autoplay="autoplay" loop="loop" muted="muted">
                </video>
            </div>
        </div>
        
    </div>

</div>
<div>
</div>
<style>
    .AI_chip {
        background-color: #fff;
        display: none;
    }

    #fb-ai-chip-space {
        height: 0;
        width: 0;
    }

    .cover-img {
        overflow: hidden;
        object-fit: cover;
    }

    #videoContainer {
        height: 100vh;
    }

    .AIvideo {
        object-fit: cover;
        width: 100%;
        position: absolute;
        top:0;
    }
    .text_video_wrapper{
        height: 100vh;
        position: relative;
    }

    @media screen and (max-width:768px) {

        .cover-img {
            width: auto;
        }

        #img-container {
            height: 100vh;
            width: 100%;
        }

        .videoContainer {
            height: 100vh;
            display: flex;
            align-items: flex-start;
            justify-content: center;

        }

        .AIvideo {
            height: 100%;
            width: auto;

        }
        .text_video_wrapper{
            display: flex;
            align-items: flex-start;
            justify-content: center;

    }
    }
</style>
<style>
    .fb-AI-description {
        background-color: #fff;
        font-family: Montserrat-Regular, Montserrat;
        position: absolute;
        top: 17%;
        left:0;
        right: 0;
        margin: 0 auto;
    }

    #AI-text {
        padding-top: 100px;
        margin: 0 auto;
        text-align: center;
        color: #1D1D1F;
        width: 838px;
    }

    #AI-text .AI-title {
        font-size: 40px;
        font-weight: bold;
        line-height: 40px;
    }

    #AI-text .AI-des {
        font-size: 18px;
        font-weight: 400;
        color: #1d1d1f;
        line-height: 24px;
        padding: 26px 0 62px;
    }

    @media screen and (max-width:768px) {

        #AI-text {
            padding: 61px 15px 40px;
            width: auto;
            margin: 0;
        }

        #AI-text .AI-title {
            font-size: 24px;
            line-height: 24px;
        }

        #AI-text .AI-des {
            font-size: 16px;
            line-height: 22px;
            padding: 14px 0 0px;
        }
        .fb-AI-description {
            top: 18%;
    }
    }
</style>
{% schema %}
{
"name": "FbAIChip",
"presets": [
{
"name": "fb-newPages-AI-chip",
"category": "Fb Sections"
}
],
"settings": [
    {
        "type": "richtext",
        "id": "title",
        "label": "Title"
    },
    {
        "type": "richtext",
        "id": "des",
        "label": "Description"
    }
]
}
{% endschema %}