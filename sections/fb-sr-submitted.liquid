<div id="section-{{ section.id }}" class="fb-sr-submitted">
    <div class="submit-title">
        <div>{{section.settings.title-L1}}</div>
        <div>{{section.settings.title-L2}}</div>
    </div>
    <div class="submit-subTitle">{{section.settings.subTitle}}</div>
    <div class="explain">{{section.settings.explain-1}}</div>
    {%- if section.settings.buttonText != blank -%}
        <a href="{{section.settings.url}}"><div class="submit-button">{{section.settings.buttonText}}</div></a>
    {%- endif -%}
    <div class="explain">{{section.settings.explain-2}}</div>
</div>
<style>
.fb-sr-submitted{
    padding: 200px 50px;
    color: #1C1B1B;
    text-align: center;
}
.submit-title{
    font-size: 36px;
    font-weight: bold;
    line-height: 36px;
}
.submit-title div:first-child{
    padding-bottom: 24px;
}
.submit-subTitle{
    padding:60px 0 80px;
    font-size: 20px;
    font-weight: 500;
    line-height: 28px;
}
.explain{
    font-size: 16px;
    font-weight: 400;
    color: #666666;
    line-height: 20px;
}
.submit-button{
    width:185px;
    height: 48px;
    text-align: center;
    line-height:48px;
    margin: 30px auto;
    color: #fff;
    background-color:#02C0D9;
    font-size: 16px;
    font-weight: bold;
}
@media only screen and (min-width: 1025px) and (max-width: 1549px){
    .fb-sr-submitted{
        padding: 161px 50px;
    }
    .submit-title{
        font-size: 29px;
        line-height: 29px;
    }
    .submit-title div:first-child{
        padding-bottom: 19px;
    }
