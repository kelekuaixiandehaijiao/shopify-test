    .fb-sr-submitted{
        padding: 107px 50px;
    }
    .submit-title{
        font-size: 19px;
        line-height: 19px;
    }
    .submit-title div:first-child{
        padding-bottom: 13px;
    }
    .submit-subTitle{
        padding:32px 0 43px;
        font-size: 14px;
        line-height: 20px;
    }
    .explain{
        font-size: 12px;
        line-height: 14px;
    }
    .submit-button{
        width:150px;
        height: 30px;
        line-height:30px;
        margin: 16px auto;
        font-size: 12px;
    }
}
@media only screen and (max-width:768px){
    .fb-sr-submitted{
        padding: 48px 13px 60px;
    }
    .submit-title{
        font-size: 22px;
        line-height: 26px;
    }
    .submit-title div:first-child{
        padding-bottom: 12px;
    }
    .submit-subTitle{
        padding:50px 12px 60px;
        font-size: 16px;
        line-height: 18px;
    }
    .explain{
        font-size: 14px;
        line-height: 18px;
        padding: 0 12px;
    }
    .submit-button{
        width:160px;
        height: 40px;
        line-height:40px;
        margin: 20px auto 30px;
        font-size: 14px;
    }
}
</style>
