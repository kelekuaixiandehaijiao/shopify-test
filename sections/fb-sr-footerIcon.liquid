<script type="text/javascript">
    $(function () {

        function resizeFooterIcon() {
            let arr1 = [];
            let arr2 = [];
            $(".lit-bike-klarna_footerIcon_item_text")
                .each(function (ulIndex, ul) {
                    arr1.push($(ul).height())
                })
                $(".footerIcon_item_title")
                .each(function (ulIndex, ul) {
                    arr2.push($(ul).height())
                })
                console
                .log("arr1", arr1)
            let arr1height = Math.max(... arr1)
            let arr2height = Math
                .max(... arr2)
                // console.log(arrheight)
                $(".lit-bike-klarna_footerIcon_item_text")
                .each(function (ulIndex, ul) {
                    $(ul).css("height", arr1height + "px")
                })
                $(".footerIcon_item_title")
                .each(function (ulIndex, ul) {
                    $(ul).css("height", arr2height + "px")
                })
        }
        if (!/Android|webOS|iPhone|iPod|BlackBerry/i.test(navigator.userAgent)) {
            resizeFooterIcon()
        }
    })
</script>
