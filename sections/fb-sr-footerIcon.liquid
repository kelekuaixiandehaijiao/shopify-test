{%- assign iconItem = section.blocks | where: 'type', 'iconItem' | first -%}
<section id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="FbSrFooterIcon" class="fb-sr-footerIcon">
    <div class="productConcat">
        <div class="sr_footerIcon {% if template == 'become-a-host' %} sr_addmargin {% endif %} {% if template == 'product.lit-bike-white' or template == 'product.lit-bike-beige' or template == 'product.lit-bike-beige-blogger'  %}productFooterPadding{% endif %}">
            {%- for block in section.blocks -%}
                <div class="footerIcon_item">
                    {%- if block.settings.Icon-Title != blank -%}
                        <a {% if forloop.last %} href="javascript:void(0);" onclick="TidioShowFun()" {% else %} href="{{block.settings.learnMore-url}}" {% endif %}>
                            <div class="icon_container">
                                {% assign imgPiker = block.settings.icon_img | img_url: '1x1' | replace: '_1x1.','_{width}x.' %}
                                <img class="Image--lazyLoad Image--fadeIn footerIcon_item_icon" data-src="{{ imgPiker }}" data-optimumx="1.2" data-widths="[400, 600, 800, 1000, 1200, 1400, 1600, 1800, 2000, 2200]" 
                                    data-sizes="auto"
                                    alt="{{ block.settings.icon_img.alt | escape }}"
                                >
                            </div>
                        </a>
                        <a {% if forloop.last %} href="javascript:void(0);" onclick="TidioShowFun()" {% else %} href="{{block.settings.learnMore-url}}" {% endif %}>
                            <div class="footerIcon_item_title footerIcon_item_title1 lit-bike-klarna_footerIcon_color lit-bike-klarna_footerIcon_item_title">
                                <!-- {%- if forloop.last -%}
                                    Talk to a Specialist
                                {%- else -%}
                                    {{block.settings.Icon-Title | escape }}   
                                {%- endif -%} -->
                                {{ block.settings.Icon-Title | escape }}   
                            </div>
                        </a>
                        <div class="footerIcon_item_text lit-bike-klarna_footerIcon_color lit-bike-klarna_footerIcon_item_text mobile-hide">{{block.settings.Description | escape }}</div>
                        <div class="footerIcon_item_button lit-bike-klarna_footerIcon_buttonColor mobile-button-hide">
                            <a {% if forloop.last %} href="javascript:void(0);" onclick="TidioShowFun()" {% else %} href="{{block.settings.learnMore-url}}" {% endif %}>{{ block.settings.learnMore }}</a>
                        </div>
                        <a {% if forloop.last %} href="javascript:void(0);" onclick="TidioShowFun()" {% else %} href="{{block.settings.learnMore-url}}" {% endif %}>
                            <div class="mobiArrow"><img src="https://cdn.shopifycdn.net/s/files/1/0592/3766/2905/files/arrow-drop-right-line.png?v=1649752635"></div>
                        </a>
                    {%- endif -%}
                </div>
            {%- endfor -%}
        </div>
    </div>
</section>
{% schema %}

{
    "name": "fbSrFooterIcon",
    "presets": [
        {
            "name": "fb-sr-FooterIcon",
            "category": "My Sections",
            "blocks": []
        }
    ],
    "settings": [],
    "blocks": [
        {
            "type": "sr-footerIcon",
            "name": "Footer Icon",
            "limit": 4,
            "settings": [
                {
                    "type": "image_picker",
                    "id": "icon_img",
                    "label": "Icon Image"
                }, {
                    "type": "text",
                    "id": "Icon-Title",
                    "label": "Icon-Title"
                }, {
                    "type": "text",
                    "id": "Description",
                    "label": "Description"
                }, {
                    "type": "url",
                    "id": "learnMore-url",
                    "label": "LearnMore URL"
                }, {
                    "type": "text",
                    "id": "learnMore",
                    "label": "Learn More",
                    "default": "Learn more >"
                }
            ]
        }
    ]
}

{% endschema %}

