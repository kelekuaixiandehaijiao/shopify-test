<div id="section-{{ section.id }}" class="fb-increase-banner">
    {%- assign newSwiperContent = section.blocks | where: 'type', 'newSwiperContent' | first -%}
    <div class="fb-increase-trust">
        <div class="swiper increase-trust-swiper">
            <div class="swiper-wrapper">
                {%- for block in section.blocks -%}
                {%- if block.settings.swiperImg -%}
                <div class="swiper-slide">
                    <div class="addWrapper">
                        <div class="newPages_imgWrapper fb-swiper-pc">
                            {% assign imgPiker = block.settings.swiperImg | img_url: '1x1' | replace:
                            '_1x1.','_{width}x.'
                            %}
                            <img class="Image--lazyLoad Image--fadeIn swiperImg" data-src="{{ imgPiker }}"
                                data-sizes="auto" data-optimumx="1.2"
                                data-widths="[1000, 1200, 1400, 1600, 1800, 2000, 2200]">
                                <span class="Image__Loader"></span>
                        </div>
                        <div class="newPages_imgWrapper fb-swiper-mb">
                            {% assign imgMbPiker = block.settings.swiperMbImg | img_url: '1x1' | replace:
                            '_1x1.','_{width}x.'
                            %}
                            <img class="Image--lazyLoad Image--fadeIn swiperImg" data-src="{{ imgMbPiker }}"
                                data-sizes="auto" data-optimumx="1.2"
                                data-widths="[1000, 1200, 1400, 1600, 1800, 2000, 2200]">
                                <span class="Image__Loader"></span>
                        </div>
                    </div>
                </div>
                {%- endif -%}
                {%- endfor -%}
            </div>
            <div class="swiper-scrollbar"></div>
        </div>
    </div>
    <div class="fb-right-box">
        <div class="line"></div>
        <div class="u-start">
            {%- if section.settings.show_custom_product_star != blank -%}
            {%- render 'fb-star-trust', product:section.settings.show_custom_product_star -%}
            {%- else -%}
            {%- render 'fb-star-trust', product: product -%}
            {%- endif -%}
        </div>

    </div>

</div>
<style>
    .fb-increase-banner {
        display: flex;
        flex-direction: row;
        width: 100%;
        height: 100px;
    }

    .fb-swiper-pc {
        display: block;
    }

    .fb-swiper-mb {
        display: none;
    }

    .fb-increase-banner .fb-increase-trust {
        width: calc(100% - 356px);
        padding:0 0 0 80px;
        box-sizing: border-box;
    }

    .fb-increase-banner .fb-right-box {
        width: 356px;
        display: flex;
        align-items: center;
        position: relative;
    }

    .fb-increase-banner .fb-right-box .line {
        width: 2px;
        height: 60px;
        background: #DDDDDD;
    }

    .fb-increase-banner .fb-right-box .u-start {
        margin-left: 2px;
        width: calc(100% - 4px);
        display: flex;
        flex-direction: row;
        justify-content: center;
    }

    .increase-trust-swiper .swiper-slide {
        display: flex;
        align-items: center;
    }

    .increase-trust-swiper .swiper-wrapper {
        height: 100px;
    }

    .newPages_imgWrapper {
        position: relative;
        width: auto;
        min-width: 168px;
        max-width: 168px;
    }

    .newPages_imgWrapper .swiperImg {
        display: block;
        position: absolute;
        width: 100%;
        top: 0;
        bottom: 0;
        right: 0;
        left: 0;
        margin: auto;
    }

    .increase-trust-swiper_text {
        padding: 23px 0px 0px;
        text-align: left;
        font-size: 18px;
        font-weight: 300;
        line-height: 22px;
    }

    .fb-increase-trust .swiper-horizontal>.swiper-scrollbar {
        /* background: #EEEEEE;
        height: 0px;
        width: 100%;
        left: 0;
        bottom: 0 */
        display: none;
    }

    .fb-increase-trust .swiper-scrollbar-drag {
        /* background: #D4D4D4;  */
        display: none;
    }

    @media(max-width: 1550px)and (min-width:1025px) {
        .fb-increase-trust {
            padding-left: 81px;
        }

        .increase-trust-swiper .swiper-wrapper {
            height: 100px;
        }

        .increase-trust-swiper_text {
            font-size: 15px;
            line-height: 18px;
        }
    }

    @media(max-width: 1024px)and (min-width:769px) {
        .fb-increase-trust {
            padding-left: 53px;
        }

        .addWrapper {
            max-width: 200px;
        }

        .increase-trust-swiper .swiper-wrapper {
            height: 100px;
        }

        .newPages_imgWrapper {
            min-height: 50px;
            min-width: 100px;
            max-width: 110px;

        }

        .increase-trust-swiper_text {
            font-size: 12px;
            line-height: 14px;
        }
    }

    @media screen and (max-width: 768px) {
        .fb-increase-banner {
            height: 60px;
        }

        .fb-swiper-pc {
            display: none;
        }

        .fb-swiper-mb {
            display: block;
        }

        .fb-increase-banner .fb-increase-trust {
            width: 50%;
            padding: 0 44px;
            box-sizing: border-box;
        }

        .fb-increase-banner .fb-right-box .line {
            width: 1px;
            height: 32px;
        }

        .increase-trust-swiper .swiper-wrapper {
            height: 60px;
        }

        .increase-trust-swiper .swiper-slide {
            border-left: none;
            /* width: 100% !important; */
        }

        .increase-trust-swiper {
            position: relative;
        }

        .newPages_imgWrapper {
            position: relative;
            min-width: 100px;
        }

        .newPages_imgWrapper .swiperImg {
            display: block;
            width: 100%;
            min-width: 100px;
        }
    }

</style>
<script type="text/javascript">
    $(function () {
        var swiper = new Swiper(".increase-trust-swiper", {
            autoplay: {
                delay: 3000,
                disableOnInteraction: false,
            },
            allowTouchMove:false,
            loop: true,
            breakpoints: {
                480: {
                    slidesPerView: 1,
                    loopedSlides: 19,
                },
                769: {
                    slidesPerView: 2,
                    loopedSlides: 19,
                },
                1080: {
                    slidesPerView: 3,
                    loopedSlides: 19,
                },
                1280: {
                    slidesPerView: 4,
                    loopedSlides: 19,
                },
                1600: {
                    slidesPerView: 5,
                    loopedSlides: 19,
                },
                1920: {
                    slidesPerView: 6,
                    loopedSlides: 19,
                },

            },

            simulateTouch: false,
            // scrollbar: {
            //     el: ".swiper-scrollbar",
            // },
        });
    })
</script>

