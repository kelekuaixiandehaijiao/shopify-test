<div id="section-{{ section.id }}" class="fri-buy-program">
    <div class="fri-buy-program-con">
        <div class="buy_program_home">
            {{section.settings.buy_program_home}}
        </div>      
        <div class="buy-program-customer">
            {% assign buy_program_img = section.settings.buy_program_img | img_url: '1x1' | replace: '_1x1.','_{width}x.' %}
            <img class="Image--lazyLoad Image--fadeIn buy_program_img" 
                data-src="{{ buy_program_img }}" 
                data-sizes="auto"
                data-optimumx="1.2"
                data-widths="[400, 600, 800, 1000, 1200, 1400, 1600, 1800, 2000, 2200]"
            >
            <div class="buy_program_title">
                <div class="buy_program_title_black">{{section.settings.buy_program_title_black}}</div>
                <div class="buy_program_title_color">
                     <a href="{{ section.settings.link_url }}">{{ section.settings.buy_program_title_color  | escape }}</a>
                 </div>
            </div>
        </div> 
    </div>
</div>
<style>
    /* pc ç«¯*/
    @media only screen and (min-width: 821px){
        .fri-buy-program-con{
            margin: auto;
        }
        .buy_program_home{
            margin-top: 120px;
            font-weight: 700;
            font-size: 36px;
            line-height: 44px;
            text-align: center;
            color: #000000;
        }
        .buy-program-customer{
            width: 680px;
            margin: auto;
            margin-top: 43px;
            display: flex;
        }
        .buy_program_img{
            width: 40px;
            border-radius: 200px;
            margin-right: 20px;
            margin-left: 20%;
        }
        .buy_program_title{
            width: 174px;
        }
        .buy_program_title_black{
            font-weight: 400;
            font-size: 14px;
            line-height: 17px;
            color: #000000;
        }
        .buy_program_title_color{
            font-weight: 400;
            font-size: 14px;
            line-height: 17px;
            color: #02C0D9;
            margin-top: 8px;
            text-decoration: underline;
        }
    }
    @media only screen and (max-width: 820px){
        .fri-buy-program-con{
            display: none;
        }
    }
</style>    
{% schema %}
  {
    "name": "FbFriendbuyProgram",
    "presets": [
      {
        "name": "fb-friendbuy-program",
        "category": "Fb Sections",
        "blocks": []
      }
    ],
    "settings": [
        {
            "type": "text",
            "id": "buy_program_home",
            "label": "Buy Program Home"
        },
        {
            "type": "image_picker",
            "id": "buy_program_img",
            "label": "Buy Program Img"
        },
        {
            "type": "text",
            "id": "buy_program_title_black",
            "label": "Buy Program Title Black"
        },
        {
             "type": "text",
            "id": "buy_program_title_color",
             "label": "Buy Program Title Color"
        },
        {
            "type":"url",
            "id":"link_url",
            "label":"Link url"
        }
    ]
  }
{% endschema %}