        </a>
      {%- endif -%}

      {%- if block.settings.button_2_text_mob != blank -%}
        <a
            {% if block.settings.button_2_open_dialog_mob %}
                data-type="playvideo"
                href="javascript:void(0)"
                data-videourl="{{ block.settings.button_2_link_mob }}"
                class="js-open-videodialog ButtonGroup__Item Button js-public-gtm-btn button_2_text"
            {%- else -%}
                href="{{ block.settings.button_2_link_mob }}"
                class="ButtonGroup__Item Button js-public-gtm-btn button_2_text" 
            {% endif %}
          style="{% if block.settings.button_2_text_bordercolor_mob %}border-color:{{ block.settings.button_2_text_bordercolor_mob }};{% endif %}{% if block.settings.button_2_text_color_mob %}color: {{ block.settings.button_2_text_color_mob }}; {% endif %}{% if block.settings.button_2_text_backgroundcolor_mob %}background-color: {{ block.settings.button_2_text_backgroundcolor_mob }};{% endif %}"
          data-number="{{ forloop.index }}"
          data-btntext="{{ block.settings.button_2_text_mob }}"
          id="gtm-homeSlideshow-xBikeButton-{{ block.settings.button_2_text_mob | escape }}">
          {{ block.settings.button_2_text_mob | escape }}
        </a>
      {%- endif -%}
    </div>
  </div>
{%- endif -%}

{%- assign banner_more  = block.settings.banner_more | strip_html -%}
{%- assign banner_more_mob = block.settings.banner_more_mob | strip_html -%}
{%- if block.settings.banner_more != blank or block.settings.banner_more_mob != blank -%}
