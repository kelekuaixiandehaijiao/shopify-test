
{%- if block.settings.subheading != blank -%}
    <div class="SectionHeader__SubHeading Heading u-h6"
        style="{% if block.settings.subheading_color %} color: {{ block.settings.subheading_color }}; {% endif %} "
    > 
        {%- if block.settings.subheading_mo != blank -%}
            {{ block.settings.subheading | strip_html }} {{ block.settings.subheading_mo }}/mo<sup>1</sup>
        {%- else -%}
            {{ block.settings.subheading }}
        {%- endif -%}
    </div>
{%- endif -%}
{%- assign title_oprichtext  = block.settings.title | strip_html -%}
{%- if title_oprichtext  != blank -%}
    <div class="SectionHeader__Heading SectionHeader__Heading--emphasize Heading u-h1"
        style="{% if block.settings.subheading_color %}color: {{ block.settings.title_color }}; {% endif %}"
    >   
        {%- assign product =  block.settings.product  -%}
        {%- if product != blank -%}
             {{ block.settings.title | strip_html }} {{ product.selected_or_first_available_variant.price | money_without_trailing_zeros }} (<span style="text-decoration:line-through;"> {{ product.selected_or_first_available_variant.compare_at_price | money_without_trailing_zeros }}</span>)
        {%- else -%}
            {{ block.settings.title }}     
        {%- endif -%}
    </div>
{%- endif -%}

{%- if block.settings.banner_title != blank -%}
    <div class="banner_title">{{ block.settings.banner_title }}</div>
{%- endif -%}

{%- assign banner_sub_title  = block.settings.banner_sub_title | strip_html -%}
{%- if block.settings.banner_sub_title != blank -%}
    <div class="banner_sub_title">{{ block.settings.banner_sub_title }}</div>
{%- endif -%}

{%- if block.settings.banner_desc != blank -%}
    <div class="banner_desc">
        {{ block.settings.banner_desc }}
        {%- if block.settings.banner_icon != blank -%}
        {% assign banner_icon = block.settings.banner_icon | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
        <img class="Image--lazyLoad Image--fadeIn banner_icon"
            data-src="{{ banner_icon }}"
            data-optimumx="1.2"
            data-widths="[400, 600, 800, 1000, 1200, 1400, 1600, 1800, 2000, 2200]"
            data-sizes="auto"
            alt="{{ block.settings.banner_icon.alt | escape }}"
        >
        {%- endif -%}
    </div>
{%- endif -%}




{%- if block.settings.button_1_text != blank and block.settings.button_2_text != blank -%}
    {%- assign has_two_buttons = true -%}
{%- else -%}
    {%- assign has_two_buttons = false -%}
{%- endif -%}

{%- if block.settings.button_1_text != blank or block.settings.button_2_text != blank -%}
    <div class="SectionHeader__ButtonWrapper banner_button">
        <div class="ButtonGroup ButtonGroup--spacingSmall {% if has_two_buttons %}ButtonGroup--sameSize{% endif %}">
        {%- if block.settings.button_1_text != blank -%}
            <a href="{{ block.settings.button_1_link }}" class="ButtonGroup__Item Button js-public-gtm-btn button_1_text"
                style="{% if block.settings.button_1_text_bordercolor %}border-color:{{ block.settings.button_1_text_bordercolor }};{% endif %}{% if block.settings.button_1_text_color %}color: {{ block.settings.button_1_text_color }}; {% endif %}{% if block.settings.button_1_text_backgroundcolor %}background-color: {{ block.settings.button_1_text_backgroundcolor }};{% endif %}"
                data-number="{{ forloop.index }}"
                data-btntext="{{ block.settings.button_1_text }}"
                id="gtm-homeSlideshow-xBikeButton-{{ block.settings.button_1_text | escape }}"
            >
                {{ block.settings.button_1_text | escape }}
            </a>
        {%- endif -%}

        {%- if block.settings.button_2_text != blank -%}
            <a href="{{ block.settings.button_2_link }}" class="ButtonGroup__Item Button js-public-gtm-btn button_2_text"
                style="{% if block.settings.button_2_text_bordercolor %}border-color:{{ block.settings.button_2_text_bordercolor }};{% endif %}{% if block.settings.button_2_text_color %}color: {{ block.settings.button_2_text_color }}; {% endif %}{% if block.settings.button_2_text_backgroundcolor %}background-color: {{ block.settings.button_2_text_backgroundcolor }};{% endif %}"
                data-number="{{ forloop.index }}"
                data-btntext="{{ block.settings.button_2_text }}"
                id="gtm-homeSlideshow-xBikeButton-{{ block.settings.button_2_text | escape }}"
            >
                {{ block.settings.button_2_text | escape }}
            </a>
        {%- endif -%}
        </div>
    </div>
{%- endif -%}

{%- assign banner_more  = block.settings.banner_more | strip_html -%}
{%- if block.settings.banner_more != blank -%}
    <div class="banner_more">{{ block.settings.banner_more }}</div>
{%- endif -%}
