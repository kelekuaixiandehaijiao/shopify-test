<div class="right-bikecolor-box rbcb-back-{{ section.id }} js-pcshow-navcolor" data-template="{{ template }}"
     data-show="{{ section.settings.show_litbike_colornav }}"
>
    {%- capture boxbackground -%}
        {%- if section.settings.show_litbike_back_light -%}
            dark-backstyle
        {%- else -%}
            light-backstyle
        {%- endif -%}
    {%- endcapture -%}
    <div class="rbcb-block {{ boxbackground }}">
        <div class="rbcb-pull js-rbcb-pull nav-color-options">
            <div class="rbcb-pull-box">
                {%- for block in section.blocks -%}
                    <a 
                        class="litbike-color-block js-choose-navcolor 
                        {% if block.settings.is_colorlitbike_active == false %}
                          litbike-color-hover
                        {% endif %}"
                        href="javascript:void(0)"
                        data-url="{{ block.settings.colorlitbike_url }}"
                    >
                    {%- comment -%} {%- if block.settings.is_colorlitbike_active -%}
                        href="javascript:void(0)"
                    {%- else -%}
                         href="{{ block.settings.colorlitbike_url }}"        
                    {%- endif -%} {%- endcomment -%}
                        {%- if  block.settings.is_colorlitbike_active -%}
                            {% assign imgactive = block.settings.colorlitbike_active_img_pc | default: block.settings.colorlitbike_active_img | img_url %}
                            {%- comment -%} Image--lazyLoad Image--fadeIn 
                               data-sizes="auto"
                                data-optimumx="1.2"
                            {%- endcomment -%}
                            <img class="litbike-color-active" 
                                src="{{ imgactive }}" />
                        {%- else -%}
                            {% assign imgdefault = block.settings.colorlitbike_default_img_pc | default: block.settings.colorlitbike_default_img | img_url %}
                            <img class="litbike-color-default" 
                                src="{{ imgdefault }}" /> 
                        {%- endif -%}
                        
                        <span class="litbike-color-text" {% if block.settings.is_colorlitbike_active %}
                            style="display:block;"
                        {% endif %}> {{ block.settings.is_colorlitbike_name }} </span>
                    </a>
                {%- endfor -%}
            </div>
        </div>
        <div class="rbcb-scale js-rbcb-scale">
            {{ section.settings.litbike_color_title }}
        </div>
    </div>
</div>
<style>
    @media only screen and (max-width: 768px){ 
       .right-bikecolor-box{
            display: none!important;
        } 
    }
    @media only screen and (min-width: 1441px){  
        .right-bikecolor-box{
            position: fixed;
            z-index: 10;
            right: 30px;
            top: 28%;
            width: 104px;
            height: auto;
            display: none;
       }
    }
     @media only screen and (min-width: 769px) and (max-width: 1440px){  
        .right-bikecolor-box{
            position: fixed;
            z-index: 10;
            right: 30px;
            top: 38%;
            width: 102px;
            height: auto;
            display: none;
       }
     }
    @media only screen and (min-width: 769px){ 
      
       .light-backstyle, .light-backstyle .rbcb-pull{
            background-color: rgba(255,255,255,0.2);
            border-radius: 16px;
       }
       .light-backstyle .rbcb-scale{
            background-color: rgba(255,255,255,0.3);
       }
       .light-backstyle .rbcb-scale p, .light-backstyle .litbike-color-text{
            color: #1C1B1B;
       }
       .dark-backstyle, .dark-backstyle .rbcb-pull{
            background: rgba(255,255,255,0.2);
            border-radius: 16px;
       }
       .dark-backstyle2, .dark-backstyle2 .rbcb-pull{
            background: rgba(255,255,255,0.4);
            border-radius: 16px;
       }
       .dark-backstyle .rbcb-pull, .light-backstyle .rbcb-pull, .dark-backstyle2 .rbcb-pull{
            box-shadow: 0px 4px 20px 0px rgba(0,0,0,0.15);
       }
       .dark-backstyle .rbcb-scale  p, .dark-backstyle .litbike-color-text{
          color: #fff;
       }
        .dark-backstyle2 .rbcb-scale  p, .dark-backstyle2 .litbike-color-text{
            color: #1C1B1B;
        }
        .dark-backstyle .rbcb-scale {
            background-color: rgba(255,255,255,0.25);
        }
       .rbcb-block{
            width: 100%;
            position: relative;
       }
       .rbcb-scale{
            width: 100%;
            height: 52px;
            line-height: 52px;
            text-align: center;
            box-shadow: 0px 4px 20px 0px rgba(0,0,0,0.15);
            border-radius: 16px;
            padding: 0px 6px;
            position: absolute;
            top: 0px;
            left: 0px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
       }
       .rbcb-scale p{
            margin: 0;
            text-align: center;
            font-size: 14px;
            font-weight: 400;
            line-height: 16px;
       }
       .rbcb-pull{
            width: 100%;
            height: 0;
            overflow: hidden;
            position: absolute;
            top: 0;
            left: 0;
       }
       .rbcb-pull-box{
            width: 100%;
            min-height: 284px;
            display: flex;
            margin-top: 78px;
            padding: 0px 17px 12px 17px;
            justify-content: space-around;
            align-items: center;
            flex-direction: column;
       }
        .rbcb-pull .litbike-color-block{
            display: flex;
            align-items: center;
            justify-content: flex-start;
            flex-direction: column;
            min-height: 63px;
            margin-bottom: 4px;
        }
        .rbcb-pull .litbike-color-default{
            width: 24px;
            height: 24px;
            border-radius: 24px;
        }
        .rbcb-pull .litbike-color-active{
            width: 32px;
            height: 32px;
            border-radius: 32px;
        }
        .litbike-color-text{
            font-size: 12px;
            font-weight: 400;
            line-height: 14px;
            text-align: center;
            margin-top: 2px;
            display: none;
        }
        @-webkit-keyframes fadeIn {
            0% {
                opacity: 0;
            }
            50% {
                opacity: 0.5; 
            }
            100% {
                opacity: 1; 
            }
        }
        .litbike-color-hover:hover .litbike-color-text {
            display: block;
            animation: fadeIn 0.5s 1;
            -webkit-animation: fadeIn 0.5s 1;
        }
    }
</style>
