<div class="ProductMeta" {{ block.shopify_attributes }}>
  {%- if block.settings.show_vendor and product.vendor != blank -%}
    <h2 class="ProductMeta__Vendor Heading u-h6">
      {%- assign vendor_handle = product.vendor | handle -%}
      {%- assign collection_for_vendor = collections[vendor_handle] -%}

      {%- unless collection_for_vendor.empty? -%}
        <a href="{{ collection_for_vendor.url }}">{{ product.vendor }}</a>
      {%- else -%}
        {{- product.vendor -}}
      {%- endunless -%}
    </h2>
  {%- endif -%}

  <h1 class="ProductMeta__Title Heading u-h2" id="addProdctTitle">
    {%- if template.name == 'product' or template == 'page.lit-bike-white' or template == 'page.lit-bike-beige' or template == 'page.lit-bike-beige-blogger' -%}
      {{- product.title -}}
    {%- else -%}
      <a href="{{ product.url }}">{{ product.title }}</a>
    {%- endif -%}
  </h1>
	<!-- 副标题-4.11 -->
    <div class="addProduct_subheading">
      {%- if block.settings.subheading != blank -%}
        <header class="SectionHeader">
            <h3 id="new-heading-2">{{ block.settings.subheading | escape }}</h3>
        </header>
        {%- endif -%}
    </div>
     {%- if block.settings.top_banner_open_activity -%}
        <div class="product-meta-market">
            <div class="js-pink-market-text product-meta-market-text"> 
            </div>
            <div class="product-meta-barcontent js-pink-market-box">
                <div class="product-meta-progress-bar js-pink-market-bar">
                </div> 
                <div class="product-meta-progress-line js-pink-market-line">
                </div>
            </div>
            
        </div>
          
      {%- endif -%}
  {%- if block.settings.show_sku and product.selected_or_first_available_variant.sku != blank -%}
    <p class="ProductMeta__Sku Heading Text--subdued u-h6">{{ 'product.form.sku' | t }}: <span class="ProductMeta__SkuNumber">{{ product.selected_or_first_available_variant.sku }}</span></p>
  {%- endif -%}

  
{% comment %}Start automatically added Judge.me widget{% endcomment %}
  {% render 'judgeme_widgets', widget_type: 'judgeme_preview_badge', concierge_install: true, product: product %}
{% comment %}End automatically added Judge.me widget{% endcomment %}
{%- if product.template_suffix != 'coming-soon' -%}
{%- if block.settings.show_price -%}
    <div class="ProductMeta__PriceList Heading" id="addProductPrice">
      {%- if product.selected_or_first_available_variant.compare_at_price > product.selected_or_first_available_variant.price -%}
        <span class="ProductMeta__Price Price Price--compareAt Text--subdued u-h4 price-compareAt-left">{{ product.selected_or_first_available_variant.compare_at_price | money_without_trailing_zeros }}</span>
        <span id="fb_promotionPrice" class="ProductMeta__Price Price Price--highlight Text--subdued u-h1 price-highlight-left">{{ product.selected_or_first_available_variant.price | money_without_trailing_zeros }}</span>
      	<span id="fb_xbike_id" class="fb_xbike_mes">{{product.id}}</span>
      	<span id="fb_xbike_price" class="fb_xbike_mes">{{ settings.fb_xbike_discountPrice }}</span>
      	<span id="fb_xbike_category" class="fb_xbike_mes">{{ settings.fb_xbike_category }}</span>
      {%- else -%}
        {%- if product.url == '/products/exclusive-cyber-week-gift' or product.url == '/products/exclusive-gift' or product.url == '/products/freebells' -%}
        <span id="fb_promotionPrice" class="ProductMeta__Price Price Price--highlight Text--subdued u-h1 price-highlight-left">{{ product.selected_or_first_available_variant.price | money_without_trailing_zeros }}</span>
      	<span id="fb_xbike_id" class="fb_xbike_mes">{{product.id}}</span>
      	<span id="fb_xbike_price" class="fb_xbike_mes">{{ settings.fb_xbike_discountPrice }}</span>
      	<span id="fb_xbike_category" class="fb_xbike_mes">{{ settings.fb_xbike_category }}</span>
      {%- else -%}
        <span class="ProductMeta__Price Price Text--subdued u-h4">{{ product.selected_or_first_available_variant.price | money_without_trailing_zeros }}</span>
      {%- endif -%}
      {%- endif -%}
    </div>
    {%- endif -%}
<!--   {%- if product.title == 'xbike' -%}
  <div class="price-xx">pay as low as ${{ settings.fb_xbike_36installmentsPrice }}/mo<sup>1</sup> at 0% APR</div>
	{%- endif -%}
  {%- if product.title == 'Lit Bike' -%}
  <div class="price-xx">pay as low as ${{ settings.fb_lit-bike_36installmentsPrice }}/mo<sup>1</sup> at 0% APR</div>
	{%- endif -%}
  {%- if product.title == 'Lit Bike Klarna Limited Edition' -%}
  <div class="price-xx">pay as low as ${{ settings.fb_lit-bike-klarna_36installmentsPrice }}/mo<sup>1</sup> at 0% APR</div>
	{%- endif -%} -->
    <div class="ProductMeta__UnitPriceMeasurement" style="display: {%- if product.selected_or_first_available_variant.unit_price_measurement -%}block{% else %}none{% endif %}">
      <div class="UnitPriceMeasurement Heading u-h6 Text--subdued">
        <span class="UnitPriceMeasurement__Price">{{ product.selected_or_first_available_variant.unit_price | money_without_trailing_zeros }}</span>
        <span class="UnitPriceMeasurement__Separator">/ </span>
        <span class="UnitPriceMeasurement__ReferenceValue" style="display: {% if product.selected_or_first_available_variant.unit_price_measurement.reference_value != 1 %}inline{% else %}none{% endif %}">{{ product.selected_or_first_available_variant.unit_price_measurement.reference_value }}</span>
        <span class="UnitPriceMeasurement__ReferenceUnit">{{ product.selected_or_first_available_variant.unit_price_measurement.reference_unit }}</span>
      </div>
    </div>
  {%- endif -%}
<!-- 描述 -->
<div class="addProduct_des">
  {%- if block.settings.notice != blank -%}
  <div class="addNotice addNoticePc">
    {{block.settings.notice}}
  </div>  
  <div class="addNotice addNoticeMb">
    {{block.settings.noticeMb}}
    {%- if block.settings.corner != blank -%}
    <sup>{{block.settings.corner}}</sup>
    {%- endif -%}
  </div>

  {%- endif -%}
    </div>
    {%- assign content_oprichtext = block.settings.content | strip_html -%}
    {%- if content_oprichtext != blank -%}
      <div class="description">{{block.settings.content}}</div>
    {%- endif -%}

  {%- if block.settings.show_taxes_included -%}
    {%- if shop.taxes_included or shop.shipping_policy.body != blank -%}
      <p class="ProductMeta__TaxNotice Rte">
        {%- if shop.taxes_included -%}
          {{ 'product.general.include_taxes' | t }}
        {%- endif -%}

        {%- if shop.shipping_policy.body != blank -%}
          {{ 'product.general.shipping_policy_html' | t: link: shop.shipping_policy.url }}
        {%- endif -%}
      </p>
    {%- endif -%}
  {%- endif -%}
	
