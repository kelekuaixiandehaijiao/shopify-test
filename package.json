{
  "name": "shopify-2.0",
  "scripts": {
    "start": "cd shopify && shopify theme serve",
    "start3": "cd shopify && shopify theme dev",
    "deploy": "cd shopify && shopify theme push",
    "pull": "cd shopify && shopify theme pull",
    "tw": "npx tailwindcss --postcss -i ./config.css -o ./shopify/assets/shopify-style.css --watch",
