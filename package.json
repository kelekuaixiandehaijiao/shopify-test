  },
  "devDependencies": {
    "@shopify/prettier-plugin-liquid": "^1.3.0",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "tailwindcss": "^3.3.3"
  }
}
